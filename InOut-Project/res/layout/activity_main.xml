<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tr"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hack1.MainActivity" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageButton2"
        android:layout_height="40dp" />

     <Button
         android:id="@+id/btn2"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:layout_alignLeft="@+id/bMyExp"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="29dp"
         android:background="@layout/buttonshape"
         android:shadowColor="#A8A8A8"
         android:shadowDx="0"
         android:shadowDy="0"
         android:shadowRadius="5"
         android:text="Plan Away"
         android:textColor="#FFFFFF"
         android:textSize="30sp" />

     <Button
         android:id="@+id/btn1"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:layout_alignLeft="@+id/view1"
         android:layout_alignRight="@+id/view1"
         android:layout_alignTop="@+id/view1"
         android:background="@layout/buttonshape"
         android:shadowColor="#A8A8A8"
         android:shadowDx="0"
         android:shadowDy="0"
         android:shadowRadius="5"
         android:text="List of Places"
         android:textColor="#FFFFFF"
         android:textSize="30sp" />

     <Button
         android:id="@+id/bMyExp"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:layout_below="@+id/btn1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="28dp"
         android:background="@layout/buttonshape"
         android:shadowColor="#A8A8A8"
         android:shadowDx="0"
         android:shadowDy="0"
         android:shadowRadius="5"
         android:text="My Experience"
         android:textColor="#FFFFFF"
         android:textSize="30sp" />

     <Button
         android:id="@+id/bTrip"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_alignLeft="@+id/bSuit"
         android:layout_below="@+id/bMyExp"
         android:layout_marginTop="14dp"
         android:background="@layout/buttonshape"
         android:shadowColor="#A8A8A8"
         android:shadowDx="0"
         android:shadowDy="0"
         android:shadowRadius="5"
         android:text="Already on a TRIP"
         android:textColor="#FFFFFF"
         android:textSize="30sp" />

     <Button
         android:id="@+id/bSuit"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_above="@+id/btn2"
         android:layout_alignLeft="@+id/btn2"
         android:layout_marginBottom="31dp"
         android:background="@layout/buttonshape"
         android:shadowColor="#A8A8A8"
         android:shadowDx="0"
         android:shadowDy="0"
         android:shadowRadius="5"
         android:text="Pack My Suitcase"
         android:textColor="#FFFFFF"
         android:textSize="30sp" />

</RelativeLayout>
